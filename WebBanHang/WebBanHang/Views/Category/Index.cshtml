@model List<WebBanHang.Context.Category>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="py-3 bg-light">
    <div class="container">
        <ol class="breadcrumb">
            @*<li class="breadcrumb-item"><a href="@Url.Action("Index","Home")">Trang chủ</a></li>*@
        </ol>
    </div>
</section>
<section class="section-content padding-y">
    <div class="container">

        <nav class="row">

            @foreach (var item in Model)
            {
            <div class="col-md-3">
               
                    <div class="card card-category">
                        <div class="img-wrap" style="background: #ffd7d7">
                            <img src="~/Content/images/items/@item.Avatar">
                        </div>
                        <div class="card-body">
                            <h4 class="card-title"><a href="#">@item.Name</a></h4>
                        </div>
                    </div>
   
            </div> <!-- col.// -->
            }
        </nav> <!-- row.// -->


    </div> <!-- container .//  -->
</section>